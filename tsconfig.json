{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "typeRoots": ["./src/global.d.ts", "./node_modules/@types"],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

